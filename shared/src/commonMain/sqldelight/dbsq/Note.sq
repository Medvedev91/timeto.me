import kotlin.Int;

CREATE TABLE NoteSQ (
    id INTEGER AS Int NOT NULL PRIMARY KEY,
    sort INTEGER AS Int NOT NULL,
    text TEXT NOT NULL
);

--
-- Select

anyChange:
SELECT id
FROM NoteSQ
LIMIT 1;

selectAsc:
SELECT *
FROM NoteSQ
ORDER BY id ASC;

--
-- Insert

insert:
INSERT INTO NoteSQ
VALUES ?;

--
-- Update

updateById:
UPDATE NoteSQ
SET text = ?, sort = ?
WHERE id = ?;

--
-- Delete

deleteById:
DELETE FROM NoteSQ
WHERE id = ?;

truncate:
DELETE FROM NoteSQ;
